FROM frolvlad/alpine-glibc

COPY . /usr/src/build

WORKDIR /usr/src/build

RUN apk update && apk upgrade && apk add --no-cache cmake make gcc g++ libc-dev bash git python3 linux-headers

RUN wget -qO- https://bootstrap.pypa.io/get-pip.py | python3 \
&& pip3 install conan

RUN cmake -DCMAKE_BUILD_TYPE=Release . \
&& cmake --build . 
